/dts-v1/;
/plugin/;

/ {
	fragment@0 {
		target-path = "/";
		__overlay__ {
			overlay-description = "SOM: Bluetooth";
		};
	};

	/* Enable the Bluetooth interface */
	fragment@1 {
		target = <&bluetooth>;
		__overlay__ {
			status = "okay";
		};
	};

	/* Enable the RF regulator */
	fragment@2 {
		target = <&reg_3v3_rf>;
		__overlay__ {
			status = "okay";
		};
	};

	/* Enable the BT regulator */
	fragment@3 {
		target = <&reg_rf_bt_en>;
		__overlay__ {
			status = "okay";
		};
	};

	/* Enable UART2 (Bluetooth) */
	fragment@4 {
		target = <&lpuart1>;
		__overlay__ {
			status = "okay";
		};
	};
};
