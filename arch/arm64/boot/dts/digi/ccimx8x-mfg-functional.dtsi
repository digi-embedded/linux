			SC_P_SPI2_SDO_LSIO_GPIO1_IO01			0x06000020
			SC_P_SAI1_RXD_LSIO_GPIO0_IO29			0x06000020
			SC_P_ESAI0_TX5_RX0_LSIO_GPIO0_IO09		0x06000020
