/dts-v1/;
/plugin/;

/ {
	fragment@0 {
		target-path = "/";
		__overlay__ {
			overlay-description = "SBC: Parallel camera";
		};
	};

	/* Enable parallel_csi */
	fragment@1 {
		target = <&parallel_csi>;
		__overlay__ {
			status = "okay";
		};
	};

	/* Enable ov5640 */
	fragment@2 {
		target = <&ov5640>;
		__overlay__ {
			status = "okay";
		};
	};

	/* Disable mipi_csi_0 */
	fragment@3 {
		target = <&mipi_csi_0>;
		__overlay__ {
			status = "disabled";
		};
	};

	/* Disable ov5640_mipi */
	fragment@4 {
		target = <&ov5640_mipi>;
		__overlay__ {
			status = "disabled";
		};
	};
};
