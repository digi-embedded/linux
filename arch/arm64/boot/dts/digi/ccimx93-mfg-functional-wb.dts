/* Digi ConnectCore 93 WiFi-Bluetooth FCT */
#include "ccimx93-mfg-functional.dts"

/ {
	wireless {
		/* U-Boot will fill in the MAC address here */
	};

	bluetooth {
		/* U-Boot will fill in the MAC address here */
	};
};

/* Enable USDHC3 (Wireless) */
&usdhc3 {
	status = "okay";
};

/* Enable WLAN PWR control */
&wlan_pwrseq {
	status = "okay";
};

/* Enable LPUART1 (Bluetooth) */
&lpuart1 {
	status = "okay";

	bluetooth {
		compatible = "nxp,88w8987-bt";
	};
};

/* IOMUX */
&iomuxc {
	pinctrl-0 = <&pinctrl_hog_common>;
};
