/* G2 */		MX93_PAD_SD2_CD_B__GPIO3_IO00				0x31e
/* E21 */		MX93_PAD_GPIO_IO20__GPIO2_IO20				0x31e

/* E23 */		MX93_PAD_GPIO_IO16__GPIO2_IO16				0x31e
/* D25 */		MX93_PAD_CCM_CLKO2__GPIO3_IO27				0x31e

/* H1 */		MX93_PAD_SD2_DATA1__GPIO3_IO04				0x31e
