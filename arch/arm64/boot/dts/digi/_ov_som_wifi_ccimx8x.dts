#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/phy/phy-imx8-pcie.h>

/dts-v1/;
/plugin/;

/ {
	/* Add the "wireless" node so the wifi driver gets loaded */
	fragment@0 {
		target-path = "/";
		__overlay__ {
			overlay-description = "SOM: Wi-Fi";
			wireless {
				/* U-Boot will fill in the MAC address here */
			};
		};
	};

	/* Enable the RF regulator */
	fragment@1 {
		target = <&reg_3v3_rf>;
		__overlay__ {
			status = "okay";
		};
	};

	/* Enable the WL regulator */
	fragment@2 {
		target = <&reg_rf_wl_en>;
		__overlay__ {
			status = "okay";
		};
	};

	/*
	 * Enable PCIe (Wireless):
	 * - Add clkreq GPIO
	 * - Add the WL regulator as a supply
	 * - Disable PCI MSI support
	 */
	fragment@3 {
		target = <&pcieb>;
		__overlay__ {
			vpcie-supply = <&reg_rf_wl_en>;
			digi,disable_pci_msi;
			status = "okay";
		};
	};

	/* Enable PCIE clock */
	fragment@4 {
		target = <&phyx1>;
		__overlay__ {
			fsl,refclk-pad-mode = <IMX8_PCIE_REFCLK_PAD_INPUT>;
			status = "okay";
		};
	};
};
