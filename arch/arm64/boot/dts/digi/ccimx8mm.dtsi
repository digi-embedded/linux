/ {
	aliases {
		i2c1 = &i2c1;
		i2c2 = &i2c2;
		i2c3 = &i2c3;
		i2c4 = &i2c4;
		mmc0 = &usdhc3;
		mmc1 = &usdhc2;
		mmc2 = &usdhc1;
	};

	/* Bluetooth, disabled by default */
	bluetooth: bluetooth {
		/* U-Boot will fill in the MAC address here */
		compatible = "digi,bluetooth-cc8x";
		vin-supply = <&reg_rf_bt_en>;
		status = "disabled";
	};

	caam_keyblob: caam-keyblob {
		compatible = "fsl,sec-v4.0-keyblob";
	};

	/* Wifi/Bluetooth regulators, disabled by default */
	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_3v3_rf: regulator-som@1 {
			compatible = "regulator-fixed";
			reg = <1>;
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_reg_3v3_rf>;
			regulator-name = "3v3_rf";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&gpio2 6 GPIO_ACTIVE_HIGH>; /* 3V3_RF_EN */
			enable-active-high;
			startup-delay-us = <100000>;
			status = "disabled";
		};

		reg_rf_wl_en: regulator-som@2 {
			compatible = "regulator-fixed";
			reg = <2>;
			pinctrl-names = "default", "sleep";
			pinctrl-0 = <&pinctrl_reg_rf_wl_en>;
			pinctrl-1 = <&pinctrl_reg_rf_wl_en_sleep>;
			regulator-name = "rf_wl_en";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&gpio2 9 GPIO_ACTIVE_HIGH>; /* WL_EN */
			enable-active-high;
			startup-delay-us = <100>;
			vin-supply = <&reg_3v3_rf>;
			status = "disabled";
		};

		reg_rf_bt_en: regulator-som@3 {
			compatible = "regulator-fixed";
			reg = <3>;
			pinctrl-names = "default", "sleep";
			pinctrl-0 = <&pinctrl_reg_rf_bt_en>;
			pinctrl-1 = <&pinctrl_reg_rf_bt_en_sleep>;
			regulator-name = "rf_bt_en";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&gpio2 8 GPIO_ACTIVE_HIGH>; /* BT_EN */
			enable-active-high;
			startup-delay-us = <100>;
			vin-supply = <&reg_3v3_rf>;
			status = "disabled";
		};
	};

	reserved-memory {
		linux,cma {
			digi,size-table = <
				/* RAM         CMA*/
				0 0x20000000 0 0x6000000	/* 512 MB variants -> 96 MB of CMA */
				0 0x40000000 0 0x14000000	/* 1 GB variants   -> 320 MB of CMA */
				0 0x80000000 0 0x28000000	/* 2 GB variants   -> 640 MB of CMA */
			>;
		};
	};
};

&A53_0 {
	arm-supply = <&buck2_reg_pca9450>;
};

/* I2C1 connected to MCA, PMIC and crypto chip */
&i2c1 {
	assigned-clock-rates = <48000000>;
	clock-frequency = <400000>;
	digi,buffer-time-us = <35>;
	pinctrl-names = "default", "gpio";
	pinctrl-0 = <&pinctrl_i2c1>;
	pinctrl-1 = <&pinctrl_i2c1_gpio>;
	scl-gpios = <&gpio5 14 GPIO_ACTIVE_HIGH>;
	sda-gpios = <&gpio5 15 GPIO_ACTIVE_HIGH>;
	status = "okay";

	mca_cc8m: mca@63 {
		compatible = "digi,mca-cc8m";
		reg = <0x63>;
		interrupt-parent = <&gpio2>;
		interrupts = <10 IRQ_TYPE_LEVEL_HIGH>;
		interrupt-controller;
		#interrupt-cells = <2>;
		fw-update-gpio = <&gpio1 5 GPIO_ACTIVE_LOW>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_mca_cc8m>;

		mca_adc: adc {
			compatible = "digi,mca-cc8m-adc";
			digi,adc-vref = <3000000>;
		};

		mca_gpio: gpio {
			compatible = "digi,mca-cc8m-gpio";
			gpio-controller;
			#gpio-cells = <2>;

			interrupt-parent = <&mca_cc8m>;
			interrupt-controller;
			#interrupt-cells = <2>;

			/* Disable all mca GPIOs as power off wake up sources */
			pwroff-wakeup-capable-ios = <>;
		};

		pwrkey {
			compatible = "digi,mca-cc8m-pwrkey";
			digi,key-power;
			digi,key-power-up;
			digi,key-sleep;
			digi,debounce-ms = <100>;
			digi,pwroff-delay-sec = <6>;
			digi,pwroff-guard-sec = <30>;
		};

		rtc {
			compatible = "digi,mca-cc8m-rtc";
		};

		wdt {
			compatible = "digi,mca-cc8m-wdt";
			digi,full-reset;
		};

		gpio_wdt: gpio-wdt {
			compatible = "digi,mca-cc8m-gpio-wdt";
			status = "disabled";

			gpio_wdt0: gpio-wdt@0x210 {
				status = "disabled";
			};

			gpio_wdt1: gpio-wdt@0x220 {
				status = "disabled";
			};

			gpio_wdt2: gpio-wdt@0x230 {
				status = "disabled";
			};

			gpio_wdt3: gpio-wdt@0x240 {
				status = "disabled";
			};
		};

		pwms {
			compatible = "digi,mca-pwm";
			#address-cells = <1>;
			#size-cells = <0>;

			mca_pwm0: pwm@0 {
				reg = <0>;
				pwm-channels = <6>;
				#pwm-cells = <3>;
			};
		};

		mca_tamper: tamper {
			compatible = "digi,mca-cc8m-tamper";
		};

		mca_uart: uart {
			compatible = "digi,mca-cc8m-uart";
			#address-cells = <1>;
			#size-cells = <0>;
			status = "disabled";

			mca_uart0: serial@0x900 {
				reg = <0x900>;
				index = <0>;
				status = "disabled";
			};

			mca_uart1: serial@0x920 {
				reg = <0x920>;
				index = <1>;
				status = "disabled";
			};

			mca_uart2: serial@0x940 {
				reg = <0x940>;
				index = <2>;
				status = "disabled";
			};
		};

		mca_keypad: keypad {
			compatible = "digi,mca-keypad";
			status = "disabled";
		};

		mca_led: led {
			compatible = "digi,mca-led";
			status = "disabled";
		};
	};

	/* NXP PCA9450 PMIC */
	pmic_pca9450: pca9450@25 {
		reg = <0x25>;
		compatible = "nxp,pca9450";
		status = "okay";

		pca9450,pmic-buck1-uses-i2c-dvs;
		/* Run/Standby voltage */
		pca9450,pmic-buck1-dvs-voltage = <950000>, <850000>;

		regulators {
			#address-cells = <1>;
			#size-cells = <0>;

			buck1_reg_pca9450: regulator@0 {
				reg = <0>;
				regulator-compatible = "buck1";
				regulator-min-microvolt = <600000>;
				regulator-max-microvolt = <2187500>;
				regulator-boot-on;
				regulator-always-on;
				regulator-ramp-delay = <3125>;
			};

			buck2_reg_pca9450: regulator@1 {
				reg = <1>;
				regulator-compatible = "buck2";
				regulator-min-microvolt = <600000>;
				regulator-max-microvolt = <2187500>;
				regulator-boot-on;
				regulator-always-on;
				regulator-ramp-delay = <3125>;
				regulator-state-mem {
					regulator-off-in-suspend;
				};
			};

			buck3_reg_pca9450: regulator@2 {
				reg = <2>;
				regulator-compatible = "buck3";
				regulator-min-microvolt = <600000>;
				regulator-max-microvolt = <2187500>;
				regulator-boot-on;
				regulator-always-on;
				regulator-state-mem {
					regulator-off-in-suspend;
				};
			};

			buck4_reg_pca9450: regulator@3 {
				reg = <3>;
				regulator-compatible = "buck4";
				regulator-min-microvolt = <600000>;
				regulator-max-microvolt = <3400000>;
				regulator-boot-on;
				regulator-always-on;
			};

			buck5_reg_pca9450: regulator@4 {
				reg = <4>;
				regulator-compatible = "buck5";
				regulator-min-microvolt = <600000>;
				regulator-max-microvolt = <3400000>;
				regulator-boot-on;
				regulator-always-on;
			};

			buck6_reg_pca9450: regulator@5 {
				reg = <5>;
				regulator-compatible = "buck6";
				regulator-min-microvolt = <600000>;
				regulator-max-microvolt = <3400000>;
				regulator-boot-on;
				regulator-always-on;
			};

			ldo1_reg_pca9450: regulator@6 {
				reg = <6>;
				regulator-compatible = "ldo1";
				regulator-min-microvolt = <1600000>;
				regulator-max-microvolt = <3300000>;
				regulator-boot-on;
				regulator-always-on;
			};

			ldo2_reg_pca9450: regulator@7 {
				reg = <7>;
				regulator-compatible = "ldo2";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1150000>;
				regulator-boot-on;
				regulator-always-on;
			};

			ldo3_reg_pca9450: regulator@8 {
				reg = <8>;
				regulator-compatible = "ldo3";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <3300000>;
				regulator-boot-on;
				regulator-always-on;
				regulator-state-mem {
					regulator-off-in-suspend;
				};
			};

			ldo4_reg_pca9450: regulator@9 {
				reg = <9>;
				regulator-compatible = "ldo4";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <3300000>;
				regulator-boot-on;
				regulator-always-on;
				regulator-state-mem {
					regulator-off-in-suspend;
				};
			};

			ldo5_reg_pca9450: regulator@10 {
				reg = <10>;
				regulator-compatible = "ldo5";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <3300000>;
			};
		};
	};
};

&ocotp {
	/* By default, make the OTP bits read-only */
	read-only;
};

&rpmsg{
	/*
	 * 64K for one rpmsg instance:
	 * --0xb8000000~0xb800ffff: pingpong
	 */
	vdev-nums = <1>;
	reg = <0x0 0xb8000000 0x0 0x10000>;
	status = "okay";
};

/* Disable CPU RTC */
&snvs_rtc {
	status = "disabled";
};

/* Disable CPU power key */
&snvs_pwrkey {
	status = "disabled";
};

/* UART2 (Bluetooth), disabled by default */
&uart2 {
	pinctrl-names = "default", "sleep";
	pinctrl-0 = <&pinctrl_uart2>;
	pinctrl-1 = <&pinctrl_uart2_sleep>;
	assigned-clocks = <&clk IMX8MM_CLK_UART2>;
	assigned-clock-parents = <&clk IMX8MM_SYS_PLL1_80M>;
	fsl,uart-has-rtscts;
	status = "disabled";
};

/* USDHC1 (Wireless), disabled by default */
&usdhc1 {
	pinctrl-names = "default", "state_100mhz", "state_200mhz", "sleep";
	pinctrl-0 = <&pinctrl_usdhc1>;
	pinctrl-1 = <&pinctrl_usdhc1_100mhz>;
	pinctrl-2 = <&pinctrl_usdhc1_200mhz>;
	pinctrl-3 = <&pinctrl_usdhc1_sleep>;
	non-removable;
	bus-width = <4>;
	vmmc-supply = <&reg_rf_wl_en>;
	status = "disabled";
};

/* eMMC */
&usdhc3 {
	pinctrl-names = "default", "state_100mhz", "state_200mhz";
	pinctrl-0 = <&pinctrl_usdhc3>;
	pinctrl-1 = <&pinctrl_usdhc3_100mhz>;
	pinctrl-2 = <&pinctrl_usdhc3_200mhz>;
	bus-width = <8>;
	non-removable;
	status = "okay";
};

/* IOMUX */
&iomuxc {
	/* Internal I2C (MCA, Crypto chip) */
	pinctrl_i2c1: i2c1grp {
		fsl,pins = <
			MX8MM_IOMUXC_I2C1_SCL_I2C1_SCL			0x400001c3
			MX8MM_IOMUXC_I2C1_SDA_I2C1_SDA			0x400001c3
		>;
	};

	pinctrl_i2c1_gpio: i2c1grp-gpio {
		fsl,pins = <
			MX8MM_IOMUXC_I2C1_SCL_GPIO5_IO14		0x1c3
			MX8MM_IOMUXC_I2C1_SDA_GPIO5_IO15		0x1c3
		>;
	};

	/* MCA pinctrl */
	pinctrl_mca_cc8m: mcagrp {
		fsl,pins = <
			/* MCA_nINT */
			MX8MM_IOMUXC_SD1_RESET_B_GPIO2_IO10	0x56
			/* MCA_FW_UPDATE */
			MX8MM_IOMUXC_GPIO1_IO05_GPIO1_IO5	0x16
		>;
	};

	/* 3V3_RF regulator pinctrl */
	pinctrl_reg_3v3_rf: reg_3v3_rf_grp {
		fsl,pins = <
			/* Voltage for RF domain (3V3_RF_EN) */
			MX8MM_IOMUXC_SD1_DATA4_GPIO2_IO6		0x41
		>;
	};

	pinctrl_reg_rf_wl_en: reg_rf_wl_en_grp {
		fsl,pins = <
			/* Wireless enable (WL_EN) */
			MX8MM_IOMUXC_SD1_DATA7_GPIO2_IO9		0x41
		>;
	};

	pinctrl_reg_rf_wl_en_sleep: reg_rf_wl_en_grp_sleep {
		fsl,pins = <
			/* Wireless enable (WL_EN) Open drain */
			MX8MM_IOMUXC_SD1_DATA7_GPIO2_IO9		0x21
		>;
	};

	pinctrl_reg_rf_bt_en: reg_rf_bt_en_grp {
		fsl,pins = <
			/* Bluetooth enable (BT_EN) */
			MX8MM_IOMUXC_SD1_DATA6_GPIO2_IO8		0x41
		>;
	};

	pinctrl_reg_rf_bt_en_sleep: reg_rf_bt_en_grp_sleep {
		fsl,pins = <
			/* Bluetooth enable (BT_EN) Open drain */
			MX8MM_IOMUXC_SD1_DATA6_GPIO2_IO8		0x21
		>;
	};

	/* UART2 (Bluetooth) */
	pinctrl_uart2: uart2grp {
		fsl,pins = <
			MX8MM_IOMUXC_SAI3_TXC_UART2_DCE_TX		0x140
			MX8MM_IOMUXC_SAI3_TXFS_UART2_DCE_RX		0x140
			MX8MM_IOMUXC_SAI3_RXD_UART2_DCE_RTS_B	0x140
			MX8MM_IOMUXC_SAI3_RXC_UART2_DCE_CTS_B	0x140
		>;
	};

	pinctrl_uart2_sleep: uart2grp_sleep {
		fsl,pins = <
			MX8MM_IOMUXC_SAI3_TXC_GPIO5_IO0		0x020
			MX8MM_IOMUXC_SAI3_TXFS_GPIO4_IO31		0x020
			MX8MM_IOMUXC_SAI3_RXD_GPIO4_IO30	0x020
			MX8MM_IOMUXC_SAI3_RXC_GPIO4_IO29	0x020
		>;
	};

	/* USDHC1 (Wireless) */
	pinctrl_usdhc1: usdhc1grp {
		fsl,pins = <
			MX8MM_IOMUXC_SD1_CLK_USDHC1_CLK		0x190
			MX8MM_IOMUXC_SD1_CMD_USDHC1_CMD		0x1d0
			MX8MM_IOMUXC_SD1_DATA0_USDHC1_DATA0	0x1d0
			MX8MM_IOMUXC_SD1_DATA1_USDHC1_DATA1	0x1d0
			MX8MM_IOMUXC_SD1_DATA2_USDHC1_DATA2	0x1d0
			MX8MM_IOMUXC_SD1_DATA3_USDHC1_DATA3	0x1d0
		>;
	};

	pinctrl_usdhc1_100mhz: usdhc1grp100mhz {
		fsl,pins = <
			MX8MM_IOMUXC_SD1_CLK_USDHC1_CLK		0x194
			MX8MM_IOMUXC_SD1_CMD_USDHC1_CMD		0x1d4
			MX8MM_IOMUXC_SD1_DATA0_USDHC1_DATA0	0x1d4
			MX8MM_IOMUXC_SD1_DATA1_USDHC1_DATA1	0x1d4
			MX8MM_IOMUXC_SD1_DATA2_USDHC1_DATA2	0x1d4
			MX8MM_IOMUXC_SD1_DATA3_USDHC1_DATA3	0x1d4
		>;
	};

	pinctrl_usdhc1_200mhz: usdhc1grp200mhz {
		fsl,pins = <
			MX8MM_IOMUXC_SD1_CLK_USDHC1_CLK		0x196
			MX8MM_IOMUXC_SD1_CMD_USDHC1_CMD		0x1d6
			MX8MM_IOMUXC_SD1_DATA0_USDHC1_DATA0	0x1d6
			MX8MM_IOMUXC_SD1_DATA1_USDHC1_DATA1	0x1d6
			MX8MM_IOMUXC_SD1_DATA2_USDHC1_DATA2	0x1d6
			MX8MM_IOMUXC_SD1_DATA3_USDHC1_DATA3	0x1d6
		>;
	};

	pinctrl_usdhc1_sleep: usdhc1grp_sleep {
		fsl,pins = <
			MX8MM_IOMUXC_SD1_CLK_GPIO2_IO0		0x020
			MX8MM_IOMUXC_SD1_CMD_GPIO2_IO1		0x020
			MX8MM_IOMUXC_SD1_DATA0_GPIO2_IO2	0x020
			MX8MM_IOMUXC_SD1_DATA1_GPIO2_IO3	0x020
			MX8MM_IOMUXC_SD1_DATA2_GPIO2_IO4	0x020
			MX8MM_IOMUXC_SD1_DATA3_GPIO2_IO5	0x020
		>;
	};

	/* eMMC */
	pinctrl_usdhc3: usdhc3grp {
		fsl,pins = <
			MX8MM_IOMUXC_NAND_WE_B_USDHC3_CLK		0x190
			MX8MM_IOMUXC_NAND_WP_B_USDHC3_CMD		0x1d0
			MX8MM_IOMUXC_NAND_DATA04_USDHC3_DATA0		0x1d0
			MX8MM_IOMUXC_NAND_DATA05_USDHC3_DATA1		0x1d0
			MX8MM_IOMUXC_NAND_DATA06_USDHC3_DATA2		0x1d0
			MX8MM_IOMUXC_NAND_DATA07_USDHC3_DATA3		0x1d0
			MX8MM_IOMUXC_NAND_RE_B_USDHC3_DATA4		0x1d0
			MX8MM_IOMUXC_NAND_CE2_B_USDHC3_DATA5		0x1d0
			MX8MM_IOMUXC_NAND_CE3_B_USDHC3_DATA6		0x1d0
			MX8MM_IOMUXC_NAND_CLE_USDHC3_DATA7		0x1d0
			MX8MM_IOMUXC_NAND_CE1_B_USDHC3_STROBE 		0x190
		>;
	};

	pinctrl_usdhc3_100mhz: usdhc3grp100mhz {
		fsl,pins = <
			MX8MM_IOMUXC_NAND_WE_B_USDHC3_CLK		0x194
			MX8MM_IOMUXC_NAND_WP_B_USDHC3_CMD		0x1d4
			MX8MM_IOMUXC_NAND_DATA04_USDHC3_DATA0		0x1d4
			MX8MM_IOMUXC_NAND_DATA05_USDHC3_DATA1		0x1d4
			MX8MM_IOMUXC_NAND_DATA06_USDHC3_DATA2		0x1d4
			MX8MM_IOMUXC_NAND_DATA07_USDHC3_DATA3		0x1d4
			MX8MM_IOMUXC_NAND_RE_B_USDHC3_DATA4		0x1d4
			MX8MM_IOMUXC_NAND_CE2_B_USDHC3_DATA5		0x1d4
			MX8MM_IOMUXC_NAND_CE3_B_USDHC3_DATA6		0x1d4
			MX8MM_IOMUXC_NAND_CLE_USDHC3_DATA7		0x1d4
			MX8MM_IOMUXC_NAND_CE1_B_USDHC3_STROBE 		0x194
		>;
	};

	pinctrl_usdhc3_200mhz: usdhc3grp200mhz {
		fsl,pins = <
			MX8MM_IOMUXC_NAND_WE_B_USDHC3_CLK		0x196
			MX8MM_IOMUXC_NAND_WP_B_USDHC3_CMD		0x1d6
			MX8MM_IOMUXC_NAND_DATA04_USDHC3_DATA0		0x1d6
			MX8MM_IOMUXC_NAND_DATA05_USDHC3_DATA1		0x1d6
			MX8MM_IOMUXC_NAND_DATA06_USDHC3_DATA2		0x1d6
			MX8MM_IOMUXC_NAND_DATA07_USDHC3_DATA3		0x1d6
			MX8MM_IOMUXC_NAND_RE_B_USDHC3_DATA4		0x1d6
			MX8MM_IOMUXC_NAND_CE2_B_USDHC3_DATA5		0x1d6
			MX8MM_IOMUXC_NAND_CE3_B_USDHC3_DATA6		0x1d6
			MX8MM_IOMUXC_NAND_CLE_USDHC3_DATA7		0x1d6
			MX8MM_IOMUXC_NAND_CE1_B_USDHC3_STROBE 		0x196
		>;
	};
};
